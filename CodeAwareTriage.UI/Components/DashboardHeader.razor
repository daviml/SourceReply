@using CodeAwareTriage.UI.Models

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <div class="bg-[#1a1a24] p-6 rounded-xl border border-[#2d2d3d] shadow-lg">
    <p class="text-sm font-medium text-gray-400 uppercase tracking-wider">Total Tickets</p>
    <p class="text-4xl font-bold mt-2 text-white">@Stats.Total</p>
  </div>
  <div class="bg-[#1a1a24] p-6 rounded-xl border border-[#2d2d3d] shadow-lg">
    <p class="text-sm font-medium text-gray-400 uppercase tracking-wider">Critical Priority</p>
    <p class="text-4xl font-bold mt-2 text-red-500">@Stats.Critical</p>
  </div>
  <div class="bg-[#1a1a24] p-6 rounded-xl border border-[#2d2d3d] shadow-lg">
    <p class="text-sm font-medium text-gray-400 uppercase tracking-wider">SLA Breach (>3d)</p>
    <p class="text-4xl font-bold mt-2 text-orange-500">@Stats.SlaExceeded</p>
  </div>
</div>

@code {
    [Parameter]
    public DashboardStats Stats { get; set; } = new DashboardStats();
}
